# ── Hostinger VPS Production Environment ──
# Copy this to .env.production and fill in real values.

# PostgreSQL (set in docker-compose.prod.yml, but also needed here for migrate)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=schnell_sicher_umzug

# Base URL (your domain)
NEXT_PUBLIC_BASE_URL="https://schnellumzug-berlin.de"
# Docker host port for the app container (change if 3000 is occupied on the VPS)
WEB_PORT=3001

# SMTP
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT="587"
SMTP_USER="kontakt@schnellsicherumzug.de"
SMTP_PASS="CHANGE_ME"
SMTP_FROM="Schnell Sicher Umzug <kontakt@schnellsicherumzug.de>"
ORDER_RECEIVER_EMAIL="kontakt@schnellsicherumzug.de"

# Admin
ADMIN_EMAIL="admin@schnellsicherumzug.de"
ADMIN_PASSWORD_HASH=""
SESSION_SECRET="CHANGE_ME_64_CHAR_RANDOM_STRING"

# Uploads (absolute path inside container)
UPLOAD_DIR="/app/uploads"

# Availability
MAX_BOOKINGS_PER_HOUR=3

# ORS Distance API
ORS_API_KEY=""
ORS_BASE_URL="https://api.openrouteservice.org"
PER_KM_PRICE=1.2
MIN_DRIVE_PRICE=25
ORS_CACHE_TTL_DAYS=30

# Supabase (for file storage)
NEXT_PUBLIC_SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# DocuSign (optional — fallback signing works without it)
DOCUSIGN_INTEGRATION_KEY=""
DOCUSIGN_USER_ID=""
DOCUSIGN_ACCOUNT_ID=""
DOCUSIGN_PRIVATE_KEY=""
DOCUSIGN_BASE_PATH="account.docusign.com"
DOCUSIGN_REDIRECT_URI="https://schnellumzug-berlin.de/api/docusign/callback"
DOCUSIGN_WEBHOOK_SECRET=""

# Google Analytics (GA4 measurement ID, leave empty to disable)
NEXT_PUBLIC_GA_ID=""

# Offer / Signing
OFFER_VALIDITY_DAYS=7
SIGNING_LINK_TTL_HOURS=168
