# Base URL (used for links in emails)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
# Docker host port for the web container (change if 3000 is already in use)
WEB_PORT=3001
DOCKER_WEB_PORT=3002

# Runtime database URL (app traffic).
# Local Docker:
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/schnell_sicher_umzug?schema=public"
# Supabase (recommended for production runtime): use SESSION pooler (port 5432)
# DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres?schema=public&sslmode=require&pgbouncer=true&connection_limit=5&pool_timeout=20"

# Direct database URL (for Prisma migrations / admin scripts).
# For Supabase use direct host (port 5432), not the pooler URL:
DIRECT_URL=""
# Example:
# DIRECT_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres?schema=public&sslmode=require"

# Source DB used by scripts/migrate-to-supabase.ts
LOCAL_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/schnell_sicher_umzug?schema=public"

# Connection tuning (used when DATABASE_URL is Supabase)
DB_CONNECTION_LIMIT=5
DB_POOL_TIMEOUT=20

# Optional SSL override for edge cases
# DATABASE_SSL_REJECT_UNAUTHORIZED="false"

# SMTP (for order emails and PDF offer attachments)
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT="587"
SMTP_USER="kontakt@schnellsicherumzug.de"
SMTP_PASS="CHANGE_ME"
SMTP_FROM="Schnell Sicher Umzug <kontakt@schnellsicherumzug.de>"
ORDER_RECEIVER_EMAIL="kontakt@schnellsicherumzug.de"

# Admin login
ADMIN_EMAIL="admin@schnellsicherumzug.de"
ADMIN_PASSWORD_HASH=""
ADMIN_PASSWORD="change-me"

# Session/JWT secret (set a long random string in production)
SESSION_SECRET="change-this-to-a-long-random-secret"

# Uploads
# For production on VPS, set an absolute path outside release folders
# Example: /var/www/schnell/uploads
UPLOAD_DIR=""

# Availability
# Max overlapping bookings per hour slot
MAX_BOOKINGS_PER_HOUR=3

# Distance routing & drive pricing (OpenRouteService)
ORS_API_KEY=""
ORS_BASE_URL="https://api.openrouteservice.org"
PER_KM_PRICE=1.2
MIN_DRIVE_PRICE=25
ORS_CACHE_TTL_DAYS=30

# Keep SQL dump generated by db:migrate:supabase
# KEEP_SUPABASE_DUMP="true"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# DocuSign Configuration
# Required: Integration key from DocuSign Admin > API and Keys
DOCUSIGN_INTEGRATION_KEY="your-integration-key"
# Required: User ID (GUID) from DocuSign Admin > API and Keys
DOCUSIGN_USER_ID="your-user-id"
# Required: Account ID (GUID) from DocuSign Admin > API and Keys
DOCUSIGN_ACCOUNT_ID="your-account-id"
# Private key: provide EITHER inline via DOCUSIGN_PRIVATE_KEY or a file path via DOCUSIGN_PRIVATE_KEY_PATH.
# Inline key (recommended for cloud / CI): paste the full PEM with literal \n for line breaks.
# Example: DOCUSIGN_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nMIIE...\n-----END RSA PRIVATE KEY-----"
# Important: this MUST be a PRIVATE KEY (BEGIN ... PRIVATE KEY), not a PUBLIC KEY.
DOCUSIGN_PRIVATE_KEY=""
# File-based key (fallback): path relative to project root.
DOCUSIGN_PRIVATE_KEY_PATH="./docusign-private.key"
# OAuth base path: use "account-d.docusign.com" for sandbox, "account.docusign.com" for production.
DOCUSIGN_BASE_PATH="account-d.docusign.com"
# Redirect URI is optional for pure JWT flow (still useful for one-time consent setup).
DOCUSIGN_REDIRECT_URI="https://schnellumzug-berlin.de/api/docusign/callback"
# HMAC secret for webhook verification (DocuSign Connect > HMAC key). Required in production.
DOCUSIGN_WEBHOOK_SECRET="your-webhook-secret"

# Google Analytics (GA4 measurement ID, leave empty to disable)
NEXT_PUBLIC_GA_ID=""

# Offer Configuration
OFFER_VALIDITY_DAYS=7
SIGNING_LINK_TTL_HOURS=168
